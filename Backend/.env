# ============================================================================
# CONFIGURACIÓN GENERAL DEL SERVIDOR
# ============================================================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
BASE_URL=http://localhost:5000

# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# ============================================================================
# Datos de conexión principal
DB_HOST=localhost
DB_PORT=5432
DB_NAME=livestock_management
DB_USERNAME=postgres
DB_PASSWORD=2003

# URL de conexión completa (alternativa)
DATABASE_URL=postgresql://postgres:2003_here@localhost:5432/livestock_management

# Configuraciones adicionales de la BD
DB_DIALECT=postgres
DB_LOGGING=true
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ============================================================================
# CONFIGURACIÓN JWT Y AUTENTICACIÓN
# ============================================================================
# Secreto para firmar tokens JWT (cambiar en producción)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_123456789
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Secreto para cookies de sesión
SESSION_SECRET=your_session_secret_key_here_123456789

# ============================================================================
# CONFIGURACIÓN DE CORS
# ============================================================================
# Orígenes permitidos (frontend)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# CONFIGURACIÓN DE ARCHIVOS Y UPLOADS
# ============================================================================
# Límite de tamaño para archivos (en MB)
MAX_FILE_SIZE=10
UPLOAD_DIR=uploads/
TEMP_DIR=temp/

# Tipos de archivos permitidos
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================================================
# CONFIGURACIÓN DE GEOLOCALIZACIÓN Y MAPAS
# ============================================================================
# Configuraciones específicas para México/Tabasco
DEFAULT_LATITUDE=17.989058
DEFAULT_LONGITUDE=-92.935139
DEFAULT_LOCATION=Villahermosa, Tabasco, México

# Radio de búsqueda en kilómetros
GEOFENCE_RADIUS=50
MAX_LOCATION_AGE=300000

# API Keys para servicios de mapas (agregar tus claves)
MAPBOX_API_KEY=your_mapbox_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================================================
# CONFIGURACIÓN DE EMAIL/NOTIFICACIONES
# ============================================================================
# Configuración SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email del sistema
SYSTEM_EMAIL=noreply@livestock-management.com
ADMIN_EMAIL=admin@livestock-management.com

# ============================================================================
# CONFIGURACIÓN DE SERVICIOS EXTERNOS
# ============================================================================
# API para datos meteorológicos
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# API para precios de ganado (si existe)
LIVESTOCK_PRICES_API_KEY=your_livestock_api_key_here

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encriptación adicional
ENCRYPTION_KEY=your_32_char_encryption_key_here123
SALT_ROUNDS=12

# ============================================================================
# CONFIGURACIÓN DE LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_DIR=logs/
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# ============================================================================
# CONFIGURACIÓN DE CACHE
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
CACHE_TTL=3600

# ============================================================================
# CONFIGURACIÓN ESPECÍFICA DEL NEGOCIO
# ============================================================================
# Configuraciones para el manejo de ganado
MIN_VACCINATION_INTERVAL_DAYS=30
MAX_GESTATION_PERIOD_DAYS=285
ALERT_THRESHOLD_DAYS=7

# Configuraciones de inventario
LOW_STOCK_THRESHOLD=10
MEDICATION_EXPIRY_ALERT_DAYS=30

# ============================================================================
# CONFIGURACIÓN DE DESARROLLO/TESTING
# ============================================================================
# Variables para testing
TEST_DB_NAME=livestock_management_test
ENABLE_MOCK_DATA=true
DEBUG_MODE=true

# Variables para desarrollo
HOT_RELOAD=true
API_DOCS_ENABLED=true
CORS_DEBUG=true

# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ============================================================================
# Variables que se deben cambiar en producción
# FRONTEND_URL=https://your-domain.com
# BASE_URL=https://api.your-domain.com
# NODE_ENV=production
# JWT_SECRET=your_production_jwt_secret_very_long_and_secure
# DB_LOGGING=false
# DEBUG_MODE=false

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================
# 1. Cambiar todas las contraseñas y secretos antes de producción
# 2. Las coordenadas están configuradas para Villahermosa, Tabasco
# 3. Configurar correctamente las API keys de servicios externos
# 4. Verificar que PostgreSQL esté instalado y corriendo
# 5. Crear la base de datos antes de ejecutar migraciones
# 6. Para producción, usar variables de entorno del servidor/cloud
# ============================================================================